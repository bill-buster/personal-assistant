{
    "name": "personal-assistant",
    "version": "0.1.0",
    "description": "Local-first personal assistant with CLI, REPL, and web dashboard. Routes natural language to tools with optional LLM fallback.",
    "main": "dist/core/index.js",
    "bin": {
        "assistant": "./dist/app/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch --preserveWatchOutput",
        "clean": "rm -rf dist coverage .tmp .cache .test-results *.prof *.profraw *.cpuprofile *.heapsnapshot",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "test:legacy": "npm run build && TEST_DIST=1 node --max-old-space-size=256 dist/run_tests.js",
        "test:coverage:open": "npm run test:coverage && open coverage/index.html",
        "test:coverage:report": "npm run build && npm run test:coverage && node dist/scripts/test_coverage_report.js",
        "test:e2e": "npm run build && TEST_DIST=1 node dist/app/cli_e2e.test.js",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "check": "npm run typecheck && npm run lint && npm run format:check",
        "fix": "npm run lint:fix && npm run format",
        "fix:all": "npm run lint:fix && npm run format && npm run typecheck",
        "format:all": "prettier --write \"**/*.{ts,js,json,md}\" --ignore-path .gitignore",
        "start": "node dist/app/cli.js",
        "dev": "npm run build && node dist/app/cli.js repl",
        "dev:watch": "concurrently \"npm run build:watch\" \"nodemon --watch dist --ext js --exec 'node dist/app/cli.js repl'\"",
        "repl": "node dist/app/cli.js repl",
        "demo": "node dist/app/cli.js demo --human",
        "web": "node dist/app/cli.js web",
        "web:watch": "concurrently \"npm run build:watch\" \"nodemon --watch dist --ext js --exec 'node dist/app/cli.js web'\"",
        "doctor": "node dist/scripts/doctor.js",
        "preflight": "./scripts/preflight.sh",
        "leak:check": "./scripts/leak-check.sh",
        "smoke": "./scripts/smoke-test.sh",
        "cleanup": "./scripts/cleanup_generated.sh",
        "review": "npm run build && node dist/scripts/code_review.js",
        "review:fix": "npm run build && node dist/scripts/code_review_fix.js",
        "review:incremental": "npm run build && node dist/scripts/incremental_review.js",
        "review:status": "npm run build && node dist/scripts/incremental_review.js --status",
        "review:reset": "npm run build && node dist/scripts/incremental_review.js --reset",
        "review:eslint": "npm run build && node dist/scripts/eslint_review.js",
        "review:compare": "./scripts/compare_reviews.sh",
        "eval": "npm run build && node dist/evals/run_eval.js src/evals/routing_accuracy.jsonl",
        "eval:e2e": "npm run build && node dist/scripts/e2e_eval.js",
        "eval:debug": "npm run build && node dist/scripts/e2e_eval_debug.js",
        "bench": "npm run build && node dist/benchmarks/executor_bench.js",
        "profile": "npm run build && node --prof dist/app/cli.js demo",
        "profile:analyze": "node --prof-process isolate-*.log > profile.txt && cat profile.txt",
        "profile:memory": "npm run build && node --heapsnapshot-signal=SIGUSR2 dist/app/cli.js demo",
        "docs:api": "typedoc --out docs/api src/ --exclude '**/*.test.ts' --exclude '**/run_tests.ts'",
        "docs:api:open": "npm run docs:api && open docs/api/index.html",
        "release": "semantic-release",
        "prepare": "husky"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "keywords": [
        "assistant",
        "cli",
        "repl",
        "llm",
        "tools",
        "groq",
        "openrouter",
        "local-first"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.0.0",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "^10.0.1",
        "@types/node": "^25.0.3",
        "c8": "^9.0.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.0.0",
        "husky": "^9.0.0",
        "lint-staged": "^15.0.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.0.0",
        "semantic-release": "^25.0.2",
        "typedoc": "^0.28.15",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.0.0",
        "vitest": "^4.0.16"
    },
    "dependencies": {
        "zod": "^4.3.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
